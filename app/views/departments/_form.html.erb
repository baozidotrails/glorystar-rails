<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :describe %>
    <%= f.input :introduction %>
    <%= f.input :sort %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
