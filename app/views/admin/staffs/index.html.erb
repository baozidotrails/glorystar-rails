<h1>Listing staffs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Position</th>
      <th>Title</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Blessing</th>
      <th>Dictum</th>
      <th>Quit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= image_tag staff.photo_url(:thumb).to_s %></td>
        <td><%= staff.name %></td>
        <td><%= staff.position %></td>
        <td><%= staff.title %></td>
        <td><%= staff.email %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.blessing %></td>
        <td><%= staff.dictum %></td>
        <td><%= staff.quit %></td>
        <td><%= link_to 'Show', admin_staff_path(staff) %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', admin_staff_path(staff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

